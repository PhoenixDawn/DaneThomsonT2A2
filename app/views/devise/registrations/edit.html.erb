<div class="card text-center">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
  <%# Become a grandma button%>
  <% if !current_user.has_role? :grandma %>
    <p><%= button_to "Become a Grandma!", profile_path, method: :post, class: "btn btn-primary bg-success" %></p>
  <% end %>
  <%# ----------------- %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class: "col-sm-3 col-form-label" %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-3 col-form-label" %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-3 col-form-label" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-3 col-form-label" %>
    </div>
    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "col-sm-3 col-form-label" %>
    </div>
    <strong>Address</strong>
    <div class="field">
      <%= f.label :street_number %><br />
      <%= f.text_field :street_number, class: "col-sm-3 col-form-label" %>
    </div>
    <div class="field">
      <%= f.label :unit %><br />
      <%= f.text_field :unit, class: "col-sm-3 col-form-label" %>
    </div>
    <div class="field">
      <%= f.label :postcode %><br />
      <%= f.text_field :postcode, class: "col-sm-3 col-form-label" %>
    </div>
    <div class="field">
      <%= f.label :suburb %><br />
      <%= f.text_field :suburb, class: "col-sm-3 col-form-label" %>
    </div>
    <div class="field">
      <%= f.label :state %><br />
      <%= f.text_field :state, class: "col-sm-3 col-form-label" %>
    </div>
    <div class="actions">
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>
  <h3>Cancel my account</h3>
  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary bg-danger" %></p>
  <%= link_to "Back", :back %>
</div>
