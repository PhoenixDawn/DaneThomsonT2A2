<div class="card text-center">
  <h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-3 col-form-label" %>
    </div>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class: "col-sm-3 col-form-label" %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-3 col-form-label" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-3 col-form-label" %>
    </div>
    <strong>Address</strong>
    <div class="field">
      <%= f.label :street_number %><br />
      <%= f.text_field :street_number, class: "col-sm-3 col-form-label" %>
    </div>
    <div class="field">
      <%= f.label :unit %><br />
      <%= f.text_field :unit, class: "col-sm-3 col-form-label" %>
    </div>
    <div class="field">
      <%= f.label :postcode %><br />
      <%= f.text_field :postcode, class: "col-sm-3 col-form-label" %>
    </div>
    <div class="field">
      <%= f.label :suburb %><br />
      <%= f.text_field :suburb, class: "col-sm-3 col-form-label" %>
    </div>
    <div class="field">
      <%= f.label :state %><br />
      <%= f.text_field :state, class: "col-sm-3 col-form-label" %>
    </div>
    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
