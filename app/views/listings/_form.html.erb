<%= form_with(model: listing) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>
      <ul>
        <% listing.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "col-sm-3 col-form-label" %>
  </div>
  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, class: "col-sm-3 col-form-label" %>
  </div>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, class: "col-sm-3 col-form-label" %>
  </div>
  <div class="field">
    <%= form.label :ingredients %>
    <%= form.text_area :ingredients, class: "col-sm-3 col-form-label" %>
  </div>
  <div class="field">
    <%= form.label :photo %>
    <%= form.file_field :photo, class: "col-sm-3 col-form-label btn btn-primary" %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
