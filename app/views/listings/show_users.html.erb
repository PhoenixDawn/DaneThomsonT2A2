<h1>Listings for <%=@grandma.name%></h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Ingredients</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.name %></td>
        <td><%= listing.price %></td>
        <td><%= listing.description %></td>
        <td><%= listing.ingredients %></td>
        <td><%= link_to 'Show', listing %></td>
        <% if listing.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
          <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  <%= if current_user.id != @grandma.id %>
    <%= link_to 'Message me!', direct_message_path(@grandma) %>
  <% end %>
</table>
